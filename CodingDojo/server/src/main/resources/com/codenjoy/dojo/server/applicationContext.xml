<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <bean id="actionLogger" class="com.codenjoy.dojo.services.ActionLogger">
        <constructor-arg value="database/logs.db"/>
        <constructor-arg value="20"/>
    </bean>

    <bean id="gameSaver" class="com.codenjoy.dojo.services.PlayerGameSaver">
        <constructor-arg value="database/saves.db"/>
    </bean>

    <bean id="registration" class="com.codenjoy.dojo.services.Registration">
        <constructor-arg value="database/users.db"/>
    </bean>

    <bean id="payment" class="com.codenjoy.dojo.services.Payment">
        <constructor-arg value="database/payment.db"/>
    </bean>

    <bean id="timerService" class="com.codenjoy.dojo.services.TimerService" init-method="init">
        <property name="period" value="1000"/>
    </bean>
    <bean id="playerService" class="com.codenjoy.dojo.services.PlayerServiceImpl"/>
    <bean name="screenControllerServlet" class="com.codenjoy.dojo.transport.screen.ScreenController"/>

    <bean name="playerControllerFactory" class="com.codenjoy.dojo.services.PlayerControllerFactoryImpl"/>

    <bean name="httpPlayerController" class="com.codenjoy.dojo.services.HttpPlayerController" >
        <property name="transport" ref="httpPlayerTransport"/>
    </bean>

    <bean name="wsPlayerController" class="com.codenjoy.dojo.services.WsPlayerController" >
        <property name="transport" ref="wsPlayerTransport"/>
    </bean>

    <context:annotation-config/>
    <context:component-scan base-package="com.codenjoy.dojo.services"/>
</beans>